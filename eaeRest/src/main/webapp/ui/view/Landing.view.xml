<mvc:View 
	controllerName="org.eae.tools.controller.Landing"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
		header="{i18n>manageEaeCalTitle}" subheader="{i18n>manageEaeCalTieSubTitle}" press="navigateToTeamCalendar" visible="{= (${/PublisherData/Publisher/isAdmin} &amp;&amp; ${/Publisher/email} !== 'ANONYMOUS')}">
		<tileContent>
			<TileContent unit="" footer="">
				<content>
					<ImageContent src="sap-icon://appointment-2" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
		header="{i18n>managePublishersRecords}" press="navigateToPublisherManagement"  visible="{= (${/PublisherData/Publisher/isAdmin} &amp;&amp; ${/PublisherData/Publisher/email} !== 'ANONYMOUS')}">
		<tileContent>
			<TileContent unit="" footer="">
				<content>
					<ImageContent src="sap-icon://account" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
	
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
		header="{parts:[{path:'/PublisherData/Period/starts'},{path:'/PublisherData/Period/ends'}], formatter:'.formatPeriodDates'}" subheader="{i18n>managePersonalCalTieSubTitle}" 
		press="navigateToPersonalCalendarManagement" visible="{= ${/PublisherData/Publisher/email} !== 'ANONYMOUS' }">
		<tileContent>
			<TileContent unit="" footer="">
				<content>
					<ImageContent src="sap-icon://appointment" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>	
		
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
		header="{i18n>currentWeek}" subheader="{i18n>shiftSchedule}" 
		press="navigateToCuurentSchedule" visible="{= ${/PublisherData/Publisher/email} !== 'ANONYMOUS' }">
		<tileContent>
			<TileContent unit="" footer="">
				<content>
					<ImageContent src="sap-icon://appointment" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>		
</mvc:View>