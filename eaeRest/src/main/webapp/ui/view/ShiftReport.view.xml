<mvc:View controllerName="org.eae.tools.controller.ShiftReport"
	xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns="sap.m" xmlns:core="sap.ui.core">
	<semantic:FullscreenPage id="shiftReport"
		navButtonPress="onNavBack" showNavButton="true" title="{i18n>reportShiftItems}" showFooter="false">
		<semantic:content>
			<Table
				inset="false"
				id="idShiftReportTable"
				itemPress="selectPublicationItem" 	
				alternateRowColors="true"	
				items="{
							path: 'children'
						}"
				>
				<headerToolbar>
					<Toolbar>
						<Breadcrumbs id="navBreadCrumb" />
						
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column
						width="12em">
						<Text text="{i18n>reportItem}" />
					</Column>
					<Column
						hAlign="End" >
						<Text text="{i18n>count}" />
					</Column>
				</columns>
 				<items>
					<core:Fragment fragmentName="org.eae.tools.view.fragments.ShiftReportItem" type="XML"/>
				</items>
			    <swipeContent>
			      <Button
			        text="Delete Item"
			        type="Reject"
			        press="handleReject" />
			    </swipeContent>
			</Table>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>
