<mvc:View
	controllerName="org.eae.tools.controller.CartSchedule"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
	xmlns:semantic="sap.m.semantic" 
	xmlns:core="sap.ui.core">
		<semantic:FullscreenPage id="cartSchedule"
		navButtonPress="onNavBack" showNavButton="true" title="{i18n>shiftSchedule}">
			<uxap:ObjectPageLayout id="cartSchedulePage" enableLazyLoading="false" subSectionLayout="TitleOnLeft"
					  showTitleInHeaderContent="true" showHeaderContent="false"
					  sections="{weeks}" showOnlyHighImportance="true" flexEnabled="true"
					  >
				<uxap:headerTitle>
					<uxap:ObjectPageHeader objectTitle="{path:'info', formatter:'.formatHeaderTitle'}" objectSubtitle="{cartSchedule/cart/name}">
						<uxap:actions>
							<uxap:ObjectPageHeaderActionButton text="{i18n>toCurrentWeek}" type="Emphasized" hideText="false" press="onScrollToCurrentWeekAction"/>
						</uxap:actions>					
					</uxap:ObjectPageHeader>
				</uxap:headerTitle>

				<uxap:sections>
					<uxap:ObjectPageSection title="{parts:['i18n>cw', 'name']}">
						<uxap:customData>
							<core:CustomData key="weekNumber" value="{name}"/>
						</uxap:customData>
						<uxap:subSections>
							<uxap:ObjectPageSubSection blocks="{path:'weekDays', templateShareable:true}">
								<uxap:blocks>
										<FlexBox
											direction="Column"
											alignItems="Left"
											renderType="Bare">
											<items>
											<Panel content="{path:'shifts', templateShareable:true}">
												<headerToolbar>
													<Toolbar>
														<Title text="{parts:['date'], formatter:'.formatUtils.formatDayTitle'}"/>
														<ToolbarSpacer />
													</Toolbar>
												</headerToolbar>
												<content>
													<core:Fragment fragmentName="org.eae.tools.view.fragments.ShiftView" type="XML"/>
												</content>
											</Panel>
											<TextArea editable="false" maxLength="255" width="100%" cols="0" rows="3" change="onLocationTodeliverChange" value="{= ${deliverTo/0/location}}"/>
											</items>
										</FlexBox>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</semantic:FullscreenPage>
</mvc:View>
