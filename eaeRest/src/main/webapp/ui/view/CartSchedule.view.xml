<mvc:View
	controllerName="org.eae.tools.controller.CartSchedule"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
	xmlns:semantic="sap.m.semantic" 
	xmlns:core="sap.ui.core">
		<semantic:FullscreenPage id="cartSchedule"
		navButtonPress="onNavBack" showNavButton="true" title="{i18n>shiftSchedule}">
			<uxap:ObjectPageLayout id="cartSchedulePage" enableLazyLoading="false" subSectionLayout="TitleOnLeft"
					  showTitleInHeaderContent="true" showHeaderContent="false"
					  sections="{weeks}" showOnlyHighImportance="true" flexEnabled="true"
					  >
				<uxap:headerTitle>
					<uxap:ObjectPageHeader objectTitle="{path:'info', formatter:'.formatHeaderTitle'}" objectSubtitle="{cartSchedule/cart/name}">
					
					</uxap:ObjectPageHeader>
				</uxap:headerTitle>
				<uxap:sections>
					<uxap:ObjectPageSection title="{parts:['i18n>cw', 'name']}">
						<uxap:subSections>
							<uxap:ObjectPageSubSection blocks="{path:'weekDays', templateShareable:true}">
								<uxap:blocks>
									<Panel content="{path:'shifts', templateShareable:true}">
										<headerToolbar>
											<Toolbar>
												<Title text="{parts:['date'], formatter:'.formatUtils.formatDayTitle'}"/>
												<ToolbarSpacer />
												<core:Icon src="sap-icon://shipping-status" />
												<Text width="3rem" text="{deliverTo}"></Text>

											</Toolbar>
										</headerToolbar>
										<content>
											<core:Fragment fragmentName="org.eae.tools.view.fragments.ShiftView" type="XML"/>
										</content>
									</Panel>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</semantic:FullscreenPage>
</mvc:View>
