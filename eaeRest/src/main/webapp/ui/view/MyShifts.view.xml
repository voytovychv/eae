<mvc:View
	controllerName="org.eae.tools.controller.MyShifts"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
	xmlns:semantic="sap.m.semantic" 
	xmlns:core="sap.ui.core">
		<semantic:FullscreenPage id="myShifts"
		navButtonPress="onNavBack" showNavButton="true" title="{i18n>myAssignedShifts}" showFooter="false">
			<uxap:ObjectPageLayout id="myShiftsPage" enableLazyLoading="false" subSectionLayout="TitleOnLeft"
					  showTitleInHeaderContent="false" showHeaderContent="false"
					  sections="{/PublisherData/MyShifts}" showOnlyHighImportance="true" flexEnabled="true"
					  >

				<uxap:sections>
					<uxap:ObjectPageSection title="{parts:['i18n>cw', 'name']}">
						<uxap:customData>
							<core:CustomData key="weekNumber" value="{name}"/>
						</uxap:customData>
						<uxap:subSections>
							<uxap:ObjectPageSubSection blocks="{path:'weekDays', templateShareable:true}">
								<uxap:blocks>
										<FlexBox
											direction="Column"
											alignItems="Left"
											renderType="Bare">
											<items>
											<Panel content="{path:'shifts', templateShareable:true}">
												<headerToolbar>
													<Toolbar>
														<Title text="{parts:['date'], formatter:'.formatUtils.formatDayTitle'}"/>
														<ToolbarSpacer />
													</Toolbar>
												</headerToolbar>
												<content>
													<core:Fragment fragmentName="org.eae.tools.view.fragments.MyShiftView" type="XML"/>
												</content>
											</Panel>
											</items>
										</FlexBox>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</semantic:FullscreenPage>
</mvc:View>
