<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ActionSheet
		showCancelButton="true"
		placement="Bottom">
		<buttons>
			<Button text="{i18n>makeShiftLeader}" press="onAssignAsLeader" icon="sap-icon://manager" />
			<Button text="{i18n>makeTrollerCarrier}" press="onAssignCarrier" icon="sap-icon://shipping-status" />
			
			<Button text="{i18n>withdrawShiftLeader}" press="onUnassignAsLeader" type="Reject" icon="sap-icon://manager" />
			<Button text="{i18n>withdrawTrollerCarrier}" press="onUnassignCarrier" type="Reject" icon="sap-icon://shipping-status" />
<!-- 			<Button text="{i18n>call}" press="onCall" icon="sap-icon://call" />
			<Button text="{i18n>sendEmail}" press="onEmail" icon="sap-icon://email" /> -->
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>