<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		showHeader="false"
		placement="Bottom" >
			<Page
				id="master"
				title="Products">
				<List
					id="list"
					items="{/ProductCollection}" >
					<StandardListItem
						title="{Name}"
						description="{ProductId}"
						type="Active"
						icon="{ProductPicUrl}"
						press="onNavToProduct"
						iconDensityAware="false"
						iconInset="false" />
				</List>
			</Page>
	</Popover>
</core:FragmentDefinition>