<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<List id="list" mode="Delete" delete="handleDelete"
		enableBusyIndicator="true" headerText="{parts:[{path:'starts'}, {path:'ends'}], formatter: '.formatShiftTitle'}" growing="true" 
		items="{
			path: 'assigned'
		}">
		<headerToolbar>
			<Toolbar>
			<Text text="{parts: [
									'starts',
									'ends'
								],
								formatter: '.formatShiftTitle'}"></Text>
			<ToolbarSpacer />
			<Button icon="sap-icon://account" design="Lite" press="selectPublisherForAdd"/>
			</Toolbar>
		</headerToolbar>
		<StandardListItem title="{name}" description="{surname}"
			icon="sap-icon://employee" iconDensityAware="false" iconInset="false" />
	</List>

</core:FragmentDefinition>